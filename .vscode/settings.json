{
    /* Python Configuration */
    "python.defaultInterpreterPath": "${workspaceFolder}/.conda/envs/neural-ai-next/bin/python",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=100"
    ],
    "python.linting.pylintArgs": [
        "--max-line-length=100"
    ],
    "python.linting.flake8Args": [
        "--max-line-length=100",
        "--ignore=E203,W503"
    ],
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "tests",
        "-v",
        "--tb=short"
    ],
    /* Pylance Configuration */
    "python.analysis.typeCheckingMode": "strict",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,
    /* MQL5 Configuration - Using MQL Extension Pack (nicholishen) for syntax highlighting
     * Compilation: Use standalone script: ./scripts/compile_mql.sh <file.mq5>
     * Recommended extensions:
     * - MQL Extension Pack (nicholishen) - Syntax highlighting
     * - C/C++ Extension Pack (Microsoft) - For C++ language support
     */
    /* FastAPI Configuration */
    "fastapi.startServer": false,
    /* File Associations */
    "C_Cpp.errorSquiggles": "disabled",
    "files.associations": {
        "*.mq5": "cpp",
        "*.mqh": "cpp",
        "*.py": "python",
        "*.yml": "yaml",
        "*.yaml": "yaml"
    },
    /* Editor Configuration */
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "editor.rulers": [
        100
    ],
    // File beállítások
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true,
        "**/.coverage": true,
        "**/.mypy_cache": true,
        "**/.ruff_cache": true
    },
    // Git beállítások
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    // Terminal beállítások
    "terminal.integrated.defaultProfile.linux": "bash"
}
